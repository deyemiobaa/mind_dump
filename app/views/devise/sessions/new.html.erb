    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {novalidate: true, class: "group"}) do |f| %>
      <div class="mb-6">
        <%= f.label :email, class: "mb-2 block text-sm text-gray-600" %>
        <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          class: "border-[#E9EDF4] w-full rounded-md border bg-[#FCFDFE] py-3 px-5 text-base text-body-color placeholder-[#ACB6BE] outline-none focus:border-primary focus-visible:shadow-none invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-400 [&:not(:placeholder-shown):not(:focus):invalid~span]:block", 
          placeholder: "Email address", 
          required: true, 
          pattern: "[a-z0-9._+-]+@[a-z0-9.-]+\.[a-z]{2,}$" %>
          <span class="hidden mt-2 text-sm text-red-400">Please enter a valid email address. </span>
      </div>

      <div class="mb-6">
        <div class="flex justify-between">
          <%= f.label :password, class: "text-sm text-gray-600 inline" %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-[#adadad] hover:text-primary hover:underline" %>
        </div>
        
        <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "border-[#E9EDF4] w-full rounded-md border bg-[#FCFDFE] py-3 px-5 text-base text-body-color placeholder-[#ACB6BE] outline-none focus:border-primary focus-visible:shadow-none mt-2 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-400 [&:not(:placeholder-shown):not(:focus):invalid~span]:block", 
        placeholder: "Password", 
        pattern: ".{6,}", 
        required: true %>
        <span class="hidden mt-2 text-sm text-red-400">Password must be atleast six characters. </span>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex mb-6">
          <%= f.check_box :remember_me, class: "appearance-none border border-[#D0D5DD] rounded-md w-5 h-5 cursor-pointer bg-white hover:border-[#1570EF] mr-2 outline-none" %>
          <%= f.label :remember_me, class: "mb-2 block text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-10">
        <%= f.submit "Log in", class: "w-full px-5 py-3 text-base text-white transition border rounded-md cursor-pointer border-primary bg-primary hover:bg-opacity-90 group-invalid:pointer-events-none group-invalid:opacity-70" %>
      </div>
    <% end %>
